<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="?attr/selectableItemBackground"
  android:orientation="vertical">

  <TextView
    android:id="@+id/tvTime"
    android:layout_width="48dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="16dp"
    android:gravity="center_horizontal"
    android:textColor="@color/colorAccent"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"
    tools:text="10:00" />

  <TextView
    android:id="@+id/tvAmPm"
    android:layout_width="48dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:gravity="center_horizontal"
    android:textColor="@color/colorAccent"
    android:textSize="12sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tvTime"
    app:layout_constraintVertical_bias="0.0"
    tools:text="AM" />

  <ImageView
    android:id="@+id/ivFavorite"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:background="?attr/selectableItemBackground"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"
    app:srcCompat="@drawable/ic_favorite_outline_accent_24dp" />

  <TextView
    android:id="@+id/tvSessionTitle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:textColor="@color/textColorPrimary"
    android:textSize="16sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toStartOf="@+id/ivFavorite"
    app:layout_constraintStart_toEndOf="@+id/tvTime"
    app:layout_constraintTop_toTopOf="@+id/tvTime"
    tools:text="Keynote for Developer" />

  <TextView
    android:id="@+id/tvRoom"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:drawableStart="@drawable/ic_location_16dp"
    android:drawableLeft="@drawable/ic_location_16dp"
    android:drawablePadding="8dp"
    android:gravity="center_vertical"
    android:textColor="@color/textColorSecondary"
    app:layout_constraintEnd_toStartOf="@+id/ivFavorite"
    app:layout_constraintStart_toEndOf="@+id/tvTime"
    app:layout_constraintTop_toBottomOf="@id/tvSessionTitle"
    tools:text="Keynote for Developer" />

  <TextView
    android:id="@+id/tvSpeaker"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp"
    android:drawableStart="@drawable/ic_speaker_16dp"
    android:drawableLeft="@drawable/ic_speaker_16dp"
    android:drawablePadding="8dp"
    android:gravity="center_vertical"
    android:textColor="@color/textColorSecondary"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/ivFavorite"
    app:layout_constraintStart_toEndOf="@+id/tvTime"
    app:layout_constraintTop_toBottomOf="@id/tvRoom"
    tools:text="Aung Kyaw Paing, Nyi Nyi Linn" />


</androidx.constraintlayout.widget.ConstraintLayout>