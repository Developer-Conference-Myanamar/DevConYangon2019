<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="?attr/selectableItemBackground"
  android:paddingStart="16dp"
  android:paddingLeft="16dp"
  android:paddingTop="8dp"
  android:paddingEnd="16dp"
  android:paddingRight="16dp"
  android:paddingBottom="8dp">

  <ImageView
    android:id="@+id/ivSpeaker"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:src="@drawable/ic_placeholder_speaker"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tvSpeaker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:textColor="@color/colorAccent"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="@+id/ivSpeaker"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/ivSpeaker"
    app:layout_constraintTop_toTopOf="@+id/ivSpeaker"
    app:layout_constraintVertical_bias="0.0"
    tools:text="Aung Kyaw Paing" />

  <TextView
    android:id="@+id/tvSpeakerTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:textColor="@color/textColorSecondary"
    app:layout_constraintBottom_toBottomOf="@+id/ivSpeaker"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/ivSpeaker"
    app:layout_constraintTop_toTopOf="@+id/ivSpeaker"
    app:layout_constraintVertical_bias="0.8"
    tools:text="Senior Android Developer at nexlabs" />

</androidx.constraintlayout.widget.ConstraintLayout>